rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Results collection - stores typing test results
    match /results/{resultId} {
      // Allow authenticated users to read only their own results
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;

      // Allow authenticated users to create new results
      // Must be their own userId and have required fields
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.timestamp is timestamp
                    && request.resource.data.wpm is number
                    && request.resource.data.accuracy is number;

      // Prevent updates and deletes to preserve test history integrity
      allow update, delete: if false;
    }

    // Deny all access to other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
